= form_for(@cake, :html => { :multipart => true }) do |form|
  %p= form.label("nazwa")
  %p= form.text_field :name
  = resource_errors_for(@cake, :name)
  %p= form.select :kind, options_for_select([["wybierz", ""], "tasty", "non-gluten", "vegan"], @cake.kind)
  = resource_errors_for(@cake, :kind)
  %p= form.label("przepis")
  %p= form.text_area :description
  = resource_errors_for(@cake, :description)
  %p= form.file_field :image
  %p= image_tag @cake.image.url(:original) if @cake.image=present?
  %p
    %label
      = form.check_box :remove_image
      Usuń zdjęcie
  %p= form.submit "Wyślij"
<p id="notice"><%= notice %></p>

<h1>Listing Cake Attachments</h1>

<table>
  <thead>
    <tr>
      <th>Cake</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cake_attachments.each do |cake_attachment| %>
      <tr>
        <td><%= cake_attachment.cake_id %></td>
        <td><%= cake_attachment.image %></td>
        <td><%= link_to 'Show', cake_attachment %></td>
        <td><%= link_to 'Edit', edit_cake_attachment_path(cake_attachment) %></td>
        <td><%= link_to 'Destroy', cake_attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cake attachment', new_cake_attachment_path %>
